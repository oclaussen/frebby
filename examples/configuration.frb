require 'frebby/config'
Frebby.transform :foo, 'fooo'
Frebby.transform :bar, 'baar'

# Both original and transformed keys should work
Frebby.force_array 'foo', 'baar'

# The 'root' object should disappear
Frebby.root_key 'root'

root 'foo' do
  hello 'world'
end

root 'bar', 'baz'

# This one should be kept as-is
root 'qux', 'foo'
